<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/cardview_default_radius"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:foreground="?android:selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/fab_margin"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/tastingBeerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tastingMenuBeerContent"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/tastingBeerDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tastingBeerName"
            android:layout_margin="@dimen/tastingMenuBeerContent"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tastingBeerPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tastingBeerDescription"
            android:layout_margin="@dimen/tastingMenuBeerContent"
            android:layout_weight="1"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>