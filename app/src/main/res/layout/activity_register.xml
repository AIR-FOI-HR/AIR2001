<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Beervana.NoActionBar"
    android:background="@color/beervana"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtRegistracija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:text="@string/registracija"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosIme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/txtRegistracija"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/ime"
            android:inputType="textPersonName"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />


        <TextView
            android:id="@+id/errUnosIme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosIme"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosPrezime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosIme"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/prezime"
            android:inputType="textPersonName"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errUnosPrezime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosPrezime"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosBrojMobitela"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosPrezime"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/broj_mobitela"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errUnosBrojMobitela"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosBrojMobitela"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosBrojMobitela"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errUnosEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosKorisnickoIme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/korisnicko_ime"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errUnosKorisnickoIme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosKorisnickoIme"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosLozinka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosKorisnickoIme"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/lozinka"
            android:inputType="textPassword"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errUnosLozinka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosLozinka"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosPonovljenaLozinka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosLozinka"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/ponovite_lozinku"
            android:inputType="textPassword"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errUnosPonovljenaLozinka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosPonovljenaLozinka"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <Spinner
            android:id="@+id/spinUloga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosPonovljenaLozinka"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:ellipsize="start"
            android:ems="10"
            android:hint="@string/odaberite_ulogu"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/errSpinUloga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/spinUloga"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosNazivLokacije"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errSpinUloga"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/naziv_lokacije"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errUnosNazivLokacije"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosNazivLokacije"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosOibLokacije"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosNazivLokacije"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/oib_lokacije"
            android:inputType="number"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errUnosOibLokacije"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosOibLokacije"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosOpisLokacije"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosOibLokacije"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/opis_lokacije"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errUnosOpisLokacije"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosOpisLokacije"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosGrad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosOpisLokacije"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/grad"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errUnosGrad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosGrad"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosUlica"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosGrad"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/ulica"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errUnosUlica"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosUlica"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <EditText
            android:importantForAutofill="no"
            android:id="@+id/unosKucniBroj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosUlica"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@android:color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/kucni_broj"
            android:inputType="text"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errUnosKucniBroj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/unosKucniBroj"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakZaGreske"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="" />

        <Button
            android:id="@+id/btnRegistracija"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/errUnosKucniBroj"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/pocetnaMarginaTekstEditor"
            android:layout_marginTop="@dimen/razmakIzmedjuRedakaTekstEditor"
            android:layout_marginEnd="@dimen/zavrsnaMarginaTekstEditor"
            android:background="@drawable/gradijent"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/paddingTekstEditor"
            android:text="@string/registriraj_se"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            />




    </RelativeLayout>

</ScrollView>