<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BeerCatalog">

        <include
            android:id="@+id/my_toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>

        <ImageView
            android:id="@+id/beerImage"
            android:layout_width="207dp"
            android:layout_height="132dp"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:scaleType="centerCrop"
            android:src="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/descriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beerNameTextView1"
            app:layout_constraintVertical_bias="0.072" />


        <ImageView
            android:id="@+id/userPicture1"
            android:layout_width="47dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toTopOf="@+id/divider11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.074"
            app:srcCompat="@drawable/ic_user_icon" />

        <TextView
            android:id="@+id/userReviewTextView1"
            android:layout_width="46dp"
            android:layout_height="62dp"
            android:layout_marginStart="40dp"
            android:text="Review"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/divider11"
            app:layout_constraintStart_toEndOf="@+id/userPicture1"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/commentTextView1"
            android:layout_width="222dp"
            android:layout_height="62dp"
            android:layout_marginStart="24dp"
            android:text="Comment"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/divider11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/userReviewTextView1" />

        <TextView
            android:id="@+id/commentTextView2"
            android:layout_width="222dp"
            android:layout_height="62dp"
            android:layout_marginStart="20dp"
            android:text="Comment"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/userReviewTextView2"
            app:layout_constraintTop_toBottomOf="@+id/commentTextView1"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/userReviewTextView2"
            android:layout_width="46dp"
            android:layout_height="62dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="14dp"
            android:text="Review"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userPicture2"
            app:layout_constraintTop_toBottomOf="@+id/divider11"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:layout_marginTop="56dp"
            android:text="Reviews:"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="157dp"
            android:layout_height="43dp"
            android:layout_marginTop="68dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/alcoholPercentageTextView"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/alcoholPercentageTextView"
            android:layout_width="158dp"
            android:layout_height="41dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="36dp"
            android:text="AlcoholPercentage"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <ImageView
            android:id="@+id/userPicture2"
            android:layout_width="47dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider11"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_user_icon" />

        <TextView
            android:id="@+id/beerNameTextView1"
            android:layout_width="89dp"
            android:layout_height="29dp"
            android:layout_marginTop="56dp"
            android:text="BeerName"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="104dp"
            android:layout_height="27dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:text="Beer price"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/beerImage"
            app:layout_constraintTop_toBottomOf="@+id/noStarTextView" />

        <TextView
            android:id="@+id/noStarTextView"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="36dp"
            android:text="/5"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/beerImage"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/beerImage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star_icon" />

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="76dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>