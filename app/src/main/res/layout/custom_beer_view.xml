<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/slikaPiva"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/download">

    </ImageView>

    <TextView
        android:id="@+id/lblNazivPiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="Naziv: "
        app:layout_constraintStart_toEndOf="@+id/slikaPiva"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/lblCijenaPiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="7dp"
        android:text="Cijena: "
        app:layout_constraintStart_toEndOf="@+id/slikaPiva"
        app:layout_constraintTop_toBottomOf="@+id/lblNazivPiva"></TextView>

    <TextView
        android:id="@+id/lblOkusPiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="7dp"
        android:text="Okus: "
        app:layout_constraintStart_toEndOf="@+id/slikaPiva"
        app:layout_constraintTop_toBottomOf="@+id/lblCijenaPiva"></TextView>

    <TextView
        android:id="@+id/txtNazivPivaPretrazivanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naziv Piva"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblNazivPiva"
        app:layout_constraintStart_toEndOf="@+id/lblNazivPiva" />

    <TextView
        android:id="@+id/txtCijenaPivaPretrazivanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cijena Piva"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblCijenaPiva"
        app:layout_constraintStart_toEndOf="@+id/lblCijenaPiva" />

    <TextView
        android:id="@+id/txtOkusPivaPretrazivanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okus Piva"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblOkusPiva"
        app:layout_constraintStart_toEndOf="@+id/lblOkusPiva" />

</androidx.constraintlayout.widget.ConstraintLayout>